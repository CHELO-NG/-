<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         id="WebApp_ID" version="3.1">
    <display-name>LogisticsDistributionSystem</display-name>
    <welcome-file-list>
        <welcome-file>adminLogin.jsp</welcome-file>
        <welcome-file>index.html</welcome-file>
        <welcome-file>index.htm</welcome-file>
        <welcome-file>index.jsp</welcome-file>
        <welcome-file>default.html</welcome-file>
        <welcome-file>default.htm</welcome-file>
        <welcome-file>default.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>controller.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>GoodsListServlet</servlet-name>
        <servlet-class>controller.GoodsListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GoodsListServlet</servlet-name>
        <url-pattern>/goods</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CourierListServlet</servlet-name>
        <servlet-class>controller.CourierListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CourierListServlet</servlet-name>
        <url-pattern>/courier</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>QueryCourierServlet</servlet-name>
        <servlet-class>controller.QueryCourierServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>QueryCourierServlet</servlet-name>
        <url-pattern>/queryCourier</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>QueryGoodsServlet</servlet-name>
        <servlet-class>controller.QueryGoodsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>QueryGoodsServlet</servlet-name>
        <url-pattern>/queryGoods</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AddCourierServlet</servlet-name>
        <servlet-class>controller.AddCourierServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddCourierServlet</servlet-name>
        <url-pattern>/addCourier</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AddGoodsServlet</servlet-name>
        <servlet-class>controller.AddGoodsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddGoodsServlet</servlet-name>
        <url-pattern>/addGoods</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UpdateGoodsServlet</servlet-name>
        <servlet-class>controller.UpdateGoodsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateGoodsServlet</servlet-name>
        <url-pattern>/updateGoods</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UpdateCourierServlet</servlet-name>
        <servlet-class>controller.UpdateCourierServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateCourierServlet</servlet-name>
        <url-pattern>/updateCourier</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DeleteCourierServlet</servlet-name>
        <servlet-class>controller.DeleteCourierServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteCourierServlet</servlet-name>
        <url-pattern>/deleteCourier</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DeleteGoodsServlet</servlet-name>
        <servlet-class>controller.DeleteGoodsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteGoodsServlet</servlet-name>
        <url-pattern>/deleteGoods</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>controller.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>controller.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

</web-app>